{
  "name": "palworld-admin",
  "version": "1.0.2",
  "module": "server/index.js",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "bun run build:client",
    "build:client": "next build",
    "check": "biome check --no-errors-on-unmatched **/*",
    "commit": "git-cz",
    "dev": "concurrently -n client,server \"bun run dev:client\" \"bun run dev:server\"",
    "dev:client": "next dev -p 2093",
    "dev:server": "bun run --tsconfig-override tsconfig.server.json --hot server/index.ts",
    "format": "biome format --write **/*",
    "prepare": "husky",
    "release": "semantic-release",
    "start": "concurrently -n client,server \"bun run start:client\" \"bun run start:server\"",
    "start:client": "next start -p 2093",
    "start:server": "bun run --tsconfig-override tsconfig.server.json server/index.ts"
  },
  "lint-staged": {
    "*": [
      "biome check --no-errors-on-unmatched"
    ]
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.gitTag} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      [
        "@codedependant/semantic-release-docker",
        {
          "dockerImage": "thenaji27/palworld-admin",
          "dockerLogin": false,
          "dockerAutoClean": false,
          "dockerBuildQuiet": false
        }
      ],
      [
        "@codedependant/semantic-release-docker",
        {
          "dockerImage": "na-ji/palworld-admin",
          "dockerRegistry": "ghcr.io",
          "dockerLogin": false,
          "dockerAutoClean": false,
          "dockerBuildQuiet": false
        }
      ]
    ],
    "preset": "angular"
  },
  "volta": {
    "node": "20.11.0"
  },
  "dependencies": {
    "@elysiajs/eden": "^0.8.1",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@react-stately/data": "^3.11.0",
    "@zedux/react": "^1.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "concurrently": "^8.2.2",
    "elysia": "latest",
    "framer-motion": "^11.0.3",
    "http-proxy": "^1.18.1",
    "lucide": "^0.323.0",
    "lucide-react": "^0.323.0",
    "next": "latest",
    "next-themes": "^0.2.1",
    "react": "latest",
    "react-dom": "latest",
    "react-fast-compare": "^3.2.2",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "tslog": "^4.9.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@codedependant/semantic-release-docker": "^4.5.1",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/http-proxy": "^1.17.14",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "bun-types": "latest",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.1",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "semantic-release": "^23.0.2",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
